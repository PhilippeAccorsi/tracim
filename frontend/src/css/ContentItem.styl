.currentColor
  color currentColor

.validateColor
  color validateColor

.cancelColor
  color cancelColor

.outdateColor
  color outdateColor

.content
  position relative
  display flex
  align-items center
  padding 10px 0
  border-bottom 0
  cursor pointer
  font-weight bold
  &.read
    font-weight normal
  &:hover
    & > .content__name
      color offWhite
    & > .content__status
      color offWhite
    & .badgeBackgroundColor
      background-color inherit
  &__type
    padding 0 25px
    font-size 30px
    text-align center
  &__dragPreview
    display flex
    align-items center
    flex 1
    width 0 // INFO - CH - 2019-06-06 - this allows the text-overflow ellipsis
  &__name
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    margin-right 10px
    font-size 17px
    color fontColor
  &__status
    width 180px
    padding 0 15px
    text-align center
    font-weight normal
    &__text
      margin-left 15px
      font-size 18px
    &__icon
      font-size 20px

//MEDIAQUERIES

@media (min-width: max-xs) and (max-width: max-lg)
  .content
    border-right 1px solid grey
    &__name__icons
        margin-top 5px

@media (max-width: max-xs)
  .content
    &__header__status
      visibility hidden
    &__name__text
      width 200px
    &__status
      width 70px
      &__icon
        display flex
        justify-content flex-end
